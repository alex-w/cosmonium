float tonemap_exp(float x) {
    return 1.0 - exp(-x);
}


float tonemap_reinhard(float x) {
    return x / (1.0 + x);
}


float tonemap_aces(float x) {
    const float a = 2.51;
    const float b = 0.03;
    const float c = 2.43;
    const float d = 0.59;
    const float e = 0.14;
    return (x * (a * x + b)) / (x * (c * x + d) + e);
}
